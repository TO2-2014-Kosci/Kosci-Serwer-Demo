<?xml version="1.0" encoding="UTF-8"?>
<project name="module_kosci-serwer-demo" default="compile.module.kosci-serwer-demo">
  <dirname property="module.kosci-serwer-demo.basedir" file="${ant.file.module_kosci-serwer-demo}"/>
  
  <property name="module.jdk.home.kosci-serwer-demo" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.kosci-serwer-demo" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.kosci-serwer-demo" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.kosci-serwer-demo" value="-encoding UTF-8 -source 1.7 ${compiler.args}"/>
  
  <property name="kosci-serwer-demo.output.dir" value="${module.kosci-serwer-demo.basedir}/out/production/Kosci-Serwer-Demo"/>
  <property name="kosci-serwer-demo.testoutput.dir" value="${module.kosci-serwer-demo.basedir}/out/test/Kosci-Serwer-Demo"/>
  
  <path id="kosci-serwer-demo.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="kosci-serwer-demo.module.production.classpath">
    <path refid="${module.jdk.classpath.kosci-serwer-demo}"/>
    <path refid="library.rabbitmq.classpath"/>
    <path refid="library.javax.json-1.0.4.classpath"/>
  </path>
  
  <path id="kosci-serwer-demo.runtime.production.module.classpath">
    <pathelement location="${kosci-serwer-demo.output.dir}"/>
    <path refid="library.rabbitmq.classpath"/>
    <path refid="library.javax.json-1.0.4.classpath"/>
  </path>
  
  <path id="kosci-serwer-demo.module.classpath">
    <path refid="${module.jdk.classpath.kosci-serwer-demo}"/>
    <pathelement location="${kosci-serwer-demo.output.dir}"/>
    <path refid="library.rabbitmq.classpath"/>
    <path refid="library.javax.json-1.0.4.classpath"/>
  </path>
  
  <path id="kosci-serwer-demo.runtime.module.classpath">
    <pathelement location="${kosci-serwer-demo.testoutput.dir}"/>
    <pathelement location="${kosci-serwer-demo.output.dir}"/>
    <path refid="library.rabbitmq.classpath"/>
    <path refid="library.javax.json-1.0.4.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.kosci-serwer-demo">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.kosci-serwer-demo">
    <patternset refid="excluded.from.module.kosci-serwer-demo"/>
  </patternset>
  
  <path id="kosci-serwer-demo.module.sourcepath">
    <dirset dir="${module.kosci-serwer-demo.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.kosci-serwer-demo" depends="compile.module.kosci-serwer-demo.production,compile.module.kosci-serwer-demo.tests" description="Compile module Kosci-Serwer-Demo"/>
  
  <target name="compile.module.kosci-serwer-demo.production" depends="register.custom.compilers" description="Compile module Kosci-Serwer-Demo; production classes">
    <mkdir dir="${kosci-serwer-demo.output.dir}"/>
    <javac2 destdir="${kosci-serwer-demo.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.kosci-serwer-demo}/javac">
      <compilerarg line="${compiler.args.kosci-serwer-demo}"/>
      <bootclasspath refid="kosci-serwer-demo.module.bootclasspath"/>
      <classpath refid="kosci-serwer-demo.module.production.classpath"/>
      <src refid="kosci-serwer-demo.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.kosci-serwer-demo"/>
    </javac2>
    
    <copy todir="${kosci-serwer-demo.output.dir}">
      <fileset dir="${module.kosci-serwer-demo.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.kosci-serwer-demo.tests" depends="register.custom.compilers,compile.module.kosci-serwer-demo.production" description="compile module Kosci-Serwer-Demo; test classes" unless="skip.tests"/>
  
  <target name="clean.module.kosci-serwer-demo" description="cleanup module">
    <delete dir="${kosci-serwer-demo.output.dir}"/>
    <delete dir="${kosci-serwer-demo.testoutput.dir}"/>
  </target>
</project>